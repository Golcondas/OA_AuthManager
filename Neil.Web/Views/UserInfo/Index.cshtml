                        $('#dlg').dialog('close');
                        $("#dg").datagrid("reload");
                        $("#name").val("");
                        pwd: $("#pwd").val("");
                        remark: $("#remark").val("");
                        $.messager.alert("提示", "修改成功");
                    }
                }
            });
        }

